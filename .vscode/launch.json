{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MCP Server (HTTP)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mcp_server.py",
            "args": [
                "--transport", "http",
                "--env", ".env"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "stopOnEntry": false
        },
